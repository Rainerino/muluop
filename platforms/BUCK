execution_platform(
    name = "linux-re",
    # Pick a “normal” target platform for your repo (example):
    platform = "//platforms:linux-x86_64",

    # Enable RE:
    remote_enabled = False,
    # Optional: allow local too (hybrid). Set False if you want remote-only.
    local_enabled = False,
    use_limited_hybrid = False,

    # IMPORTANT for BuildBuddy: choose a container image that the executor can pull.
    remote_execution_properties = {
        # BuildBuddy expects docker://... format for container-image.
        "container-image": "docker://docker.io/library/ubuntu:22.04",
        # (Optional but often helpful)
        "OSFamily": "linux",
        "Arch": "amd64",
    },
)

execution_platforms(
    name = "platforms",
    platforms = [":linux-re"],
    fallback = "error",
)
